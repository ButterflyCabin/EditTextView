<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.yehu.edittextview.MainActivity">

    <widget.EditTextView
        android:id="@+id/edv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:cursorVisible="false"
        android:maxLength="4"
        app:edv_BackgroundColor="@color/colorAccent"
        app:edv_ContentRegionColor="#eeeeee"
        app:edv_ContentTextColor="@color/colorPrimary"
        app:edv_ContentTextSize="18sp"
        app:edv_ItemCount="4"
        app:edv_ItemDivider="4dp"
        app:edv_ItemHeight="52dp"
        app:edv_ItemWidth="52dp"/>

    <widget.EditTextViewOne
        android:id="@+id/edv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:cursorVisible="false"
        android:maxLength="4"
        app:edv_BackgroundColor="#eeeeee"
        app:edv_ContentRegionColor="@color/colorAccent"
        app:edv_ContentTextColor="@color/colorPrimary"
        app:edv_ContentTextSize="18sp"
        app:edv_ItemCount="4"
        app:edv_ItemDivider="10dp"
        app:edv_ItemHeight="52dp"
        app:edv_ItemWidth="52dp" />

    <widget.EditTextViewTwo
        android:id="@+id/edv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:cursorVisible="false"
        android:maxLength="4"
        app:edv_BackgroundColor="#aaaaaa"
        app:edv_ContentRegionColor="#aaaaaa"
        app:edv_ContentTextColor="@color/colorPrimary"
        app:edv_ContentTextSize="18sp"
        app:edv_ItemCount="4"
        app:edv_ItemDivider="10dp"
        app:edv_ItemHeight="52dp"
        app:edv_ItemWidth="52dp" />


    <widget.EditTextViewThree
        android:id="@+id/edv3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:cursorVisible="false"
        android:maxLength="4"
        app:edv_ContentTextSize="18sp"
        app:edv_DividerSize="10dp"
        app:edv_ItemCount="4"
        app:edv_ItemHeight="52dp"
        app:edv_ItemWidth="52dp"
        app:edv_password="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edv3" />

</LinearLayout>
